@page
@model Webshoppen.Pages.CreateProductModel
@{
}
<div class="row">
    <div class="col-lg-12 mb-5">
        <div class="card">
            <div class="card-header">
                <h3 class="h6 text-uppercase mb-0">New Product</h3>
            </div>

            <div class="card-body">
                <form method="post">


                    <div class="form-group">
                        <label asp-for="Country">Witch Country</label>
                        <input class="form-control" asp-for="Country">
                        <span asp-validation-for="Country" class="field-validation-error"></span>
                    </div>




                    <div class="form-group">
                        <label asp-for="County">Witch County</label>
                        <input class="form-control" asp-for="County">
                        <span asp-validation-for="County" class="field-validation-error"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="Price">Price</label>
                        <input class="form-control" asp-for="Price">
                        <span asp-validation-for="Price" class="field-validation-error"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Acres">Acres</label>
                        <input class="form-control" asp-for="Acres">
                        <span asp-validation-for="Acres" class="field-validation-error"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="Img">URL for image</label>
                        <input class="form-control" asp-for="Img">
                        <span asp-validation-for="Img" class="field-validation-error"></span>
                    </div>


                    
                    <div class="form-group">
                        <label asp-for="CategoryId">Vilken Kategori tillhör produkten</label>
                        <select class="form-control" asp-for="CategoryId" asp-items="@Model.AllCategories"></select>
                        <!--select används för rolldown-->
                        <span asp-validation-for="CategoryId" class="field-validation-error"></span>
                    </div>


                    <button type="submit" class="btn btn-primary" value="Update">Spara</button>
                </form>
            </div>

        </div>

    </div>
</div>

<partial name="_ValidationScriptsPartial" />-